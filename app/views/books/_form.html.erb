
<div class="container">
  <%= bootstrap_form_with model: @book, local: true do |form| %>
 
    <% if @book.errors.any? %>
      <div id="error_explanation">
        <h2>
          <%= pluralize(@book.errors.count, "error") %> prohibited
          this book is already saved:
        </h2>
        <ul>
          <% @book.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <p>
     <%= form.number_field :Total %>
    </p>

    <p>
      <%= form.text_field :name %>
    </p>
   
    <p>
      <%= form.text_area :price %>
    </p>

     <p>
      <%= form.text_area :author %>
    </p>
   
    <p>
      <%= form.text_area :book_no %>

    </p>

    <p>
      <%= form.text_area :description %>
    </p>

    <p>
      <%= form.file_field :image %>
    </p>

    <p>
      <%= form.submit %>
    </p>

  <% end %>
</div>