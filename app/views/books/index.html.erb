
<h1>All Books</h1>
 
<table>
  <tr>
    <th>Name</th>
    <th>Price</th>
    <th>Author</th>
    <th>Book No</th>
    <th></th>
  </tr>
 
  <% @books.each do |book| %>
    <tr>
      <td><%= book.name %></td>
      <td><%= book.price %></td>
      <td><%= book.author %></td>
      <td><%= book.book_no %></td>
      <td><%#= link_to 'Show', book_path(book) %></td>
    </tr>
  <% end %>
</table>