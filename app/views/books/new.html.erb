<html>
<head>
<h1>New book</h1>
</head>
<body>
<div class="container">

  <%= bootstrap_form_with scope: :books, url: books_path, local: true do |form| %>
  
     <%#= image_tag "book.jpg" %>

     <% if @book.errors.any? %>
      <!-- <h2>Error: Invalid field</h2> -->
      <ul>
        <% @book.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 

  <p>
    <%#= form.label :name %><br>
    <%= form.text_field :name %>
  </p>
 
  <p>
    <%#= form.label :price %><br>
    <%= form.text_area :price %>
  </p>

   <p>
    <%#= form.label :author %><br>
    <%= form.text_area :author %>
  </p>
 
  <p>
    <%#= form.label :book_no %><br>
    <%= form.text_area :book_no %>
  </p>


  <p>
    <%#= form.label :description %>
    <%= form.text_area :description %>
  </p>

  <div>
  <p>
    <%#= form.label :image %>
    <%= form.file_field :image %>
  </p>
  </div>
   
  <!-- <div>
  <p>
    <#%= form.label :role %>
    <#%= form.select :role, User.roles.keys %>
  </p>
</div>

 -->

  <p>
    <%= form.submit %>
  </p>
</div>

</body>

<% end %>

</html>